@model Ecommerce_App.Models.ViewModels.ShoppingCartVM
<form method="post" asp-controller="Cart" asp-action="Summary" id="cartForm">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Shopping Cart
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-outline-info btn-sm" asp-action="Index" asp-controller="Home">Continue Shopping</a>
                    </div>
                </div>
                <div class="card-body">
                    @foreach (var list in Model.ListCart)
                    {
                        <div class="row cart-item align-items-center">
                            <div class="col-lg-1 text-center py-2">
                              
                                <input type="checkbox" class="cart-checkbox"
                                       name="SelectedCartIds"
                                       value="@list.Id"
                                       data-total="@(@list.Price* @list.Count)"
                                       checked />
                                <img src="@list.Product.ImageUrl" class="rounded" width="30" />
                            </div>

                            <div class="col-12 text-sm-center col-lg-6 text-lg-left">
                                <h5><strong>@list.Product.Title</strong></h5>
                                <p><small>@Html.Raw(list.Product.Description)</small></p>
                            </div>

                            <div class="col-4 col-lg-5 d-flex justify-content-end align-items-center">
                                <div class="text-right mr-3">
                                    <h6 class="mb-0">
                                        <strong>@list.Price <span class="text-muted">x</span> @list.Count = @(list.Price* list.Count)</strong>
                                    </h6>
                                </div>

                                <div class="btn-group mr-2" role="group">
                                    <a class="btn btn-primary" asp-action="plus" asp-route-id="@list.Id">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-action="minus" asp-route-id="@list.Id">
                                        <i class="fas fa-minus"></i>
                                    </a>
                                </div>

                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@list.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    }

                    <hr />
                    <div class="row">
                        <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <span class="text-info"> Total (USD)</span>
                                    <strong class="text-info">$ <span id="txtOrderTotal">@Model.OrderHeader.OrderTotal</span></strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="card-footer row">
                        <div class="col-4">
                   
                            <button type="submit" class="btn btn-success form-control">
                                Summary
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<script>
    function updateTotal() {
        let total = 0;
        document.querySelectorAll(".cart-checkbox").forEach(cb => {
            if (cb.checked) {
                total += parseFloat(cb.dataset.total);
            }
        });
        document.getElementById("txtOrderTotal").innerText = total.toFixed(2);
    }

    // initial load
    updateTotal();

    // update on checkbox change
    document.querySelectorAll(".cart-checkbox").forEach(cb => {
        cb.addEventListener("change", updateTotal);
    });
</script>
