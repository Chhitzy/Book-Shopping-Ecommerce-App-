@model Ecommerce_App.Models.Category

@{
    var title = Model.Id == 0 ? "New Category" : "Edit Category";
    var SaveUpdate = Model.Id != 0 ? "Update" : "Save";
}

<form method="post">

    <div class="col-10">
        <h2 class="text-primary text-capitalize text-lg-left text-uppercase border-bottom">@title</h2>

    </div>
	<div asp-validation-summary="ModelOnly" class="text-danger">

	</div>
	<div class="col-8">

		<div class="form-group row p-2 m-2">
			<div class="col-4">
				<label asp-for="Name"></label>
			</div>
			<div class="col-8">
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group row p-2 m-2">
			<div class="col-8 offset-4">
			</div>
		</div>
		<div class="form-group row p-2 m-2">
			<div class="col-4 offset-4">
				<button type="submit" class="btn btn-info form-control">@SaveUpdate</button>
			</div>
			<div class="col-4">
				<a asp-action="Index" class="btn btn-success form-control">Back To List</a>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

