@model Ecommerce_App.Models.Company
@{
	var title = Model.Id != 0 ? "Edit Company" : "New Company";
	var saveUpdate = Model.Id != 0 ? "Update" : "Save";
}
<form method="post">
	<div class="row border">
		<div class="Col-12">
			<h2 class="text-primary">@title</h2>
		</div>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="col-8 rounded border p-2 m-2">
			<div class="form-group row p-2 m-2 ">
				<div class="col-8">
					<label asp-for="Name"></label>
				</div>
				<div class="col-8">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row p-2 m-2 ">
				<div class="col-8">
					<label asp-for="StreetAddress"></label>
				</div>
				<div class="col-8">
					<input asp-for="StreetAddress" class="form-control" />
					<span asp-validation-for="StreetAddress" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row p-2 m-2 ">
				<div class="col-8">
					<label asp-for="City"></label>
				</div>
				<div class="col-8">
					<input asp-for="City" class="form-control" />
					<span asp-validation-for="City" class="text-danger"></span>
				</div>
			</div>


			<div class="form-group row p-2 m-2 ">
				<div class="col-8">
					<label asp-for="State"></label>
				</div>
				<div class="col-8">
					<input asp-for="State" class="form-control" />
					<span asp-validation-for="State" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row p-2 m-2 ">
				<div class="col-8">
					<label asp-for="PostalCode"></label>
				</div>
				<div class="col-8">
					<input asp-for="PostalCode" class="form-control" />
					<span asp-validation-for="PostalCode" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row p-2 m-2 ">
				<div class="col-8">
					<label asp-for="PhoneNumber"></label>
				</div>
				<div class="col-8">
					<input asp-for="PhoneNumber" class="form-control" />
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row p-2 m-2 ">
				<div class="col-8">
					<label asp-for="IsAuthorizedCompany"></label>
				</div>
				<div class="col-8">
					<input asp-for="IsAuthorizedCompany" class="form-check-input" />
				@* 	<label asp-for="IsAuthorizedCompany" class="form-check-label"></label> *@
					<span asp-validation-for="IsAuthorizedCompany" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row p-2 m-2">
				<div class="col-4 offset-4">
					<button type="submit" class="btn btn-info form-control">@saveUpdate</button>
				</div>
				<div class="col-4">
					<a asp-action="Index" class="btn btn-success form-control">Back To List</a>
				</div>
			</div>

		</div>
	</div>
</form>