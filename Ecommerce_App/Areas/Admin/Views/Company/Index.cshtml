<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Company List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-info form-controller"><i class="fas fa-plus"></i> Add New Company</a>
    </div>
</div>

<div class="container rounded border p-1 m-1">
    <table id="tbl" class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>StreetAddress</th>
                <th>City</th>
                <th>State</th>
                <th>PhoneNumber</th>
                <th>Isauthorizedcompany</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/Company.js"></script>
}